<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repair"
            type="com.yagr.scv.data.repairs.Repair" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/repair_name"
            style="material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{repair.name}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Repair Name" />

        <TextView
            android:id="@+id/repair_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{repair.description}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="Repair Description" />

    </LinearLayout>
</layout>